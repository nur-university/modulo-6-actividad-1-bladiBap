  "item": [
    {
      "name": "login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// 1. Convertir la respuesta a un objeto JSON\r",
              "const jsonData = pm.response.json();\r",
              "\r",
              "// 2. Extraer el valor del campo \"token\"\r",
              "const token = jsonData.token;\r",
              "\r",
              "// 3. Guardarlo en una variable de entorno o global\r",
              "if (token) {\r",
              "    pm.globals.set(\"jwt_token\", token);\r",
              "    console.log(\"Token\", token)\r",
              "    console.log(\"Token guardado correctamente en la variable: jwt_token\");\r",
              "} else {\r",
              "    console.error(\"No se encontr√≥ el token en la respuesta\");\r",
              "}"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"userName\": \"sergio\",\r\n    \"password\": \"12345678\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{api}}/login",

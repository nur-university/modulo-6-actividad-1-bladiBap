{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Jwt": {
        "SecretKey": "63f4945d921d599f27ae4fdf5bada3f1",
        "Issuer": "MicroserviciosAuthServer",
        "Audience": "MicroserviciosClientApp"
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "login-route": {
                "ClusterId": "auth-cluster",
                "Match": {
                    "Path": "/api/login"
                },
                "Transforms": [
                    {
                        "PathSet": "/user/login"
                    }
                ]
            },
            "posts-route": {
                "ClusterId": "json-placeholder-cluster",
                "AuthorizationPolicy": "Default",
                "Match": {
                    "Path": "/api/posts"
                },
                "Transforms": [
                    {
                        "PathSet": "/posts"
                    }
                ]
            },
            "users-route": {
                "ClusterId": "json-placeholder-cluster",
                "AuthorizationPolicy": "Default",
                "Match": {
                    "Path": "/api/users"
                },
                "Transforms": [
                    {
                        "PathSet": "/users"
                    }
                ]
            }
        },
        "Clusters": {
            "auth-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://auth-service:8080"
                    }
                }
            },
            "json-placeholder-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "https://jsonplaceholder.typicode.com"
                    }
                }
            }
        }
    }
}
